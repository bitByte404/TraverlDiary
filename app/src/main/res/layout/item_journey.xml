<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/task_rounded_background">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="181dp"
        android:layout_height="142dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.447"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/from_to_background" />

    <TextView
        android:id="@+id/nameOrIdTextView"
        android:layout_width="150dp"
        android:layout_height="18dp"
        android:gravity="center"
        android:text="nameOrId"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/toTimeTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fromTimeTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fromTimeTextView"
        android:layout_width="60dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="fT"
        app:layout_constraintEnd_toStartOf="@+id/nameOrIdTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toTimeTextView"
        android:layout_width="60dp"
        android:layout_height="19dp"
        android:gravity="center"
        android:text="tT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nameOrIdTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toLocationTextView"
        android:layout_width="103dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toTimeTextView" />

    <TextView
        android:id="@+id/fromLocationView"
        android:layout_width="103dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/toLocationTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/seatTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/toLocationTextView"
        app:layout_constraintStart_toEndOf="@+id/fromLocationView"
        app:layout_constraintTop_toBottomOf="@+id/nameOrIdTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>